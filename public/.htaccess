# React Router SPA Configuration
RewriteEngine On
RewriteRule ^(?!.*\.).*$ /index.html [L]

# XML and Text File Configuration
<Files "sitemap.xml">
    Header set Content-Type "application/xml; charset=utf-8"
    Header set Cache-Control "max-age=86400, public"
</Files>

<Files "robots.txt">
    Header set Content-Type "text/plain; charset=utf-8"
    Header set Cache-Control "max-age=86400, public"
</Files>

# Allow XML files to be served
<FilesMatch "\.(xml|txt)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Security Headers
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
</IfModule>

# Cache Control for Performance
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2)$">
    Header set Cache-Control "max-age=31536000, public"
</FilesMatch>

# GZIP Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/xml application/javascript application/x-javascript
</IfModule>

# MIME Types for XML
AddType application/xml .xml
AddType text/plain .txt

# Prevent access to sensitive files
<Files ".htaccess">
    Order allow,deny
    Deny from all
</Files>